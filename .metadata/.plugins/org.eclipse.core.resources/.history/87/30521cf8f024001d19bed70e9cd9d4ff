package EjemplosFG;

public class Piramide {
	public static void main(String[] args) {
		//Nombre de variables
		float  r, h,b,Abase;
		double anguloCentral,areaTotal,volumen,Pbase,areaLateral;

		//Datos de entrada
		h=8;
		r=6;
		b=8;
		//procesamiento
		Pbase= 2*Math.PI*r ;
		areaLateral= Pbase* h;
		Abase=b*b;
		areaTotal= areaLateral + Abase;

		volumen= Abase*h;
		//Datos de salidas (Resultados)
		System.out.println("Datos de la piramide");
		System.out.println("1.Radio: "+r);
		System.out.println("2.Altura: "+h);
		System.out.println("3.Perimetro de la base: "+String.format("%.2f",Pbase));
		System.out.println("4.Area de la base: "+ String.format("%.2f",Abase));
		System.out.println("5.Area Lateral: "+ String.format("%.2f",areaLateral));
		System.out.println("6.Area Total: "+ String.format("%.2f",areaTotal));
		System.out.println("7.Volumen: "+ String.format("%.2f",volumen));
		
	
	

}
	
}
